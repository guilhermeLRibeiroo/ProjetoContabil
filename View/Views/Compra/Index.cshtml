
@{
    ViewBag.Title = "Index";
}

<h3 class="text-center">Compras</h3>

<div class="row">
    <div class="col-12 mb-3 offset-9">
        <a class="btn btn-dark" href="@Url.Action("Cadastrar")"><i class="fas fa-plus"></i> Nova Compra</a>
    </div>
</div>

<div class="row">
    <div class="col-11">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Código</th>
                    <th>Número do Cartão de Crédito</th>
                    <th>Valor</th>
                    <th>Data da Compra</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Model.Compra compra in ViewBag.Compras)
                {
                    <tr class="text-center">
                        <td>@compra.Id</td>
                        <td>@compra.CartaoCredito.Numero</td>
                        <td>@compra.Valor</td>
                        <td>@compra.DataCompra.ToShortDateString()</td>
                        <td>
                            <a href="@Url.Action("Editar", new { id = compra.Id })" class="btn btn-dark"><i class="fas fa-pen"></i> Editar</a>
                            <a href="@Url.Action("Apagar", new { id = compra.Id })" class="btn btn-dark"><i class="fas fa-trash"></i> Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="text-center">
                    <th>Código</th>
                    <th>Número do Cartão de Crédito</th>
                    <th>Valor</th>
                    <th>Data da Compra</th>
                    <th>Ação</th>
                </tr>
            </tfoot>

        </table>
    </div>
</div>
