
@{
    ViewBag.Title = "Index";
}
<h3 class="text-center">Lista de Usuários</h3>

<div class="row">
    <div class="col-2">
        <a class="btn btn-dark offset-1 mb-1" href="@Url.Action("Cadastrar")"><i class="fas fa-plus"></i> Novo Usuario</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Código</th>
                    <th>Login</th>
                    <th>Senha</th>
                    <th>Data de Nascimento</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Model.Usuario usuario in ViewBag.Usuarios)
                {
                    <tr class="text-center">
                        <td>@usuario.Id</td>
                        <td>@usuario.Login</td>
                        <td>@usuario.Senha</td>
                        <td>@usuario.DataNascimento</td>
                        <td>
                            <a href="@Url.Action("Editar", new { id = usuario.Id})" class="btn btn-dark"><i class="fas fa-pen"></i> Editar</a>
                            <a href="@Url.Action("Apagar", new { id = usuario.Id})" class="btn btn-dark"><i class="fas fa-trash"></i> Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="text-center">
                    <th>Código</th>
                    <th>Login</th>
                    <th>Senha</th>
                    <th>Data de Nascimento</th>
                    <th>Ações</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

