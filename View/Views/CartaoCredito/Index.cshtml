
@{
    ViewBag.Title = "Index";
}

<h3 class="text-center">Lista De Cartões De Credito</h3>

<div class="row">
    <div class="col-2">
        <a class="btn btn-dark offset-1 mb-1" href="@Url.Action("Cadastrar")"><i class="fas fa-plus"></i> Novo Cartão</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Código</th>
                    <th>Cliente</th>
                    <th>Numero</th>
                    <th>Data De Vencimento</th>
                    <th>CVV</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Model.CartaoCredito cartao in ViewBag.CartoesCredito)
                {
                    <tr class="text-center">
                        <td>@cartao.Id</td>
                        <td>@cartao.Cliente.Nome</td>
                        <td>@cartao.Numero</td>
                        <td>@cartao.DataVencimento.ToShortDateString()</td>
                        <td>@cartao.CVV</td>
                        <td>
                            <a href="@Url.Action("Editar", new { id = cartao.Id})" class="btn btn-dark"><i class="fas fa-pen"></i> Editar</a>
                            <a href="@Url.Action("Apagar", new { id = cartao.Id})" class="btn btn-dark"><i class="fas fa-trash"></i> Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="text-center">
                    <th>Código</th>
                    <th>Cliente</th>
                    <th>Numero</th>
                    <th>Data De Vencimento</th>
                    <th>CVV</th>
                    <th>Ações</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

