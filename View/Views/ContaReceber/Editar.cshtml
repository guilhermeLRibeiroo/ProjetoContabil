
@{
    ViewBag.Title = "Editar";
}

<h3 class="text-center">Editar Conta à Receber</h3>

<form action="@Url.Action("Update")" method="post" class="offset-4" id="editarForm">
    <input type="hidden" name="id" value="@ViewBag.ContaReceber.Id" />
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-cliente">Cliente</label>
                <select class="form-control" name="idCliente" id="campo-cliente">

                    @foreach (Model.Cliente cliente in ViewBag.Clientes)
                    {
                        if (cliente.Id == ViewBag.ContaReceber.IdCliente)
                        {
                            <option selected value="@cliente.Id">@cliente.Nome</option>
                        }
                        else
                        {
                            <option value="@cliente.Id">@cliente.Nome</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-categoria">Categoria</label>
                <select  class="form-control" name="idCategoria" id="campo-categoria">

                    @foreach (Model.Categoria categoria in ViewBag.Categorias)
                    {
                        if (categoria.Id == ViewBag.ContaReceber.IdCategoria)
                        {
                            <option selected value="@categoria.Id">@categoria.Nome</option>
                        }
                        else
                        {
                            <option value="@categoria.Id">@categoria.Nome</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input class="form-control" type="text" name="nome" id="campo-nome" class="form-control" value="@ViewBag.ContaReceber.Nome" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-valor">Valor</label>
                <input class="form-control" type="number" name="valor" step=".01" id="campo-valor" value="@ViewBag.ContaReceber.Valor.ToString().Replace(",",".")" />
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-data-pagamento">Data de Pagamento</label>
                <input class="form-control" type="date" name="dataPagamento" id="campo-data-pagamento" value="@ViewBag.ContaReceber.DataPagamento.ToString("yyyy-MM-dd")" />
            </div>
        </div>
    </div>

    <div class="col-12">
        <button class="btn btn-dark offset-5" type="submit"><i class="fas fa-save"></i> Salvar</button>
    </div>
</form>

<script>
    $(document).ready(() => {

        var selectedCliente = 0;
        var selectedCategoria = 0;

        $('#campo-categoria').change(() => {
            selectedCategoria = $('#campo-categoria').children("option:selected").val();
        });

        $('#campo-cliente').change(() => {
            selectedCliente = $('#campo-cliente').children("option:selected").val();
        });

        $('#editarForm').validate({
            rules: {
                valor: {
                    required: true
                },
                idCliente: {
                    required: function () {
                        return selectedCliente == 0;
                    }
                },
                idCategoria: {
                    required: function () {
                        return selectedCategoria == 0;
                    }
                },
                nome: {
                    required: true,
                    minlength: 2
                }
            },
            messages: {
                nome: {
                    required: "Por favor, coloque algum nome",
                    minlength: "O nome deve conter 2 caractéres no mínimo."
                },
                idCliente: {
                    required: "Selecione algum cliente."
                },
                idCategoria: {
                    required: "Selecione alguma categoria."
                }
            },
            errorElement: "em",
            errorPlacement: function (error, element) {
                error.addClass("help-block text-danger");

                if (element.prop("type") === ("checkbox")) {
                    error.insertAfter(element.parent("label"));
                } else {
                    error.insertAfter(element);
                }
            },
            highlight: function (element, errorClass, validClass) {
                $(".error").addClass("text-danger").removeClass("text-success");
                $(element).addClass("bordered border-danger").removeClass("bordered border-success");
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).addClass("bordered border-success").removeClass("bordered border-danger");
            }
        });
    });
</script>
