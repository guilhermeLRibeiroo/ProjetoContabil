
@{
    ViewBag.Title = "Index";
}

<h3 class="text-center">Contas à Receber</h3>

<div class="row">
    <div class="col-12 offset-8 mb-3">
        <a class="btn btn-dark" href="@Url.Action("Cadastrar")"><i class="fas fa-plus"></i> Nova Conta à Receber</a>
    </div>
</div>

<div class="row">
    <div class="col-11">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Cliente</th>
                    <th>Categoria</th>
                    <th>Nome</th>
                    <th>Data de Pagamento</th>
                    <th>Valor da Conta</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Model.ContaReceber contaReceber in ViewBag.ContasReceber)
                {
                <tr>
                    <td>@contaReceber.Id</td>
                    <td>@contaReceber.Cliente.Nome</td>
                    <td>@contaReceber.Categoria.Nome</td>
                    <td>@contaReceber.Nome</td>
                    <td>@contaReceber.DataPagamento.ToShortDateString()</td>
                    <td>R$ @contaReceber.Valor</td>
                    <td>
                        <a href="@Url.Action("Editar", new { id = contaReceber.Id })" class="btn btn-dark"><i class="fas fa-pen"></i> Editar</a>
                        <a href="@Url.Action("Apagar", new { id = contaReceber.Id })" class="btn btn-dark"><i class="fas fa-trash"></i> Apagar</a>
                    </td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Código</th>
                    <th>Cliente</th>
                    <th>Categoria</th>
                    <th>Nome</th>
                    <th>Data de Pagamento</th>
                    <th>Valor da Conta</th>
                    <th>Ação</th>
                </tr>
            </tfoot>

        </table>
    </div>
</div>
