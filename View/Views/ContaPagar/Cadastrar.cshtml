
@{
    /**/

    ViewBag.Title = "Cadastrar";
}

<h3 class="text-center">Cadastrar Conta à Pagar</h3>

<form action="@Url.Action("Store")" method="post" class="offset-4" id="cadastrarForm">

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-cliente">Cliente</label>
                <select name="idCliente" id="campo-cliente" class="form-control">
                    <option selected disabled value="-1">Selecione alguma Cliente</option>
                    @foreach (Model.Cliente cliente in ViewBag.Clientes)
                    {
                        <option value="@cliente.Id">@cliente.Nome</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-categoria">Categoria</label>
                <select name="idCategoria" id="campo-categoria" class="form-control">
                    <option selected disabled value="-1">Selecione alguma Categoria</option>
                    @foreach (Model.Categoria categoria in ViewBag.Categorias)
                    {
                        <option value="@categoria.Id">@categoria.Nome</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" name="nome" id="campo-nome" class="form-control" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-valor">Valor</label>
                <input type="number" step="any" name="valor" id="campo-valor" class="form-control" />
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-data-vencimento">Data de Vencimento</label>
                <input type="date" name="dataVencimento" id="campo-data-vencimento" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-data-pagamento">Data de Pagamento</label>
                <input type="date" name="dataPagamento" id="campo-data-pagamento" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
        </div>
    </div>

    <div class="col-12">
        <button class="btn btn-dark offset-5" type="submit"><i class="fas fa-save"></i> Salvar</button>
    </div>
</form>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.min.js"></script>
<script>
    $(document).ready(() => {
        $('#valor').mask('000.000.000.000.000,00', { reverse: true });

        var selectedCliente = 0;
        var selectedCategoria = 0;

        $('#campo-categoria').change(() => {
            selectedCategoria = $('#campo-categoria').children("option:selected").val();
        });

        $('#campo-cliente').change(() => {
            selectedCliente = $('#campo-cliente').children("option:selected").val();
        });

        $('#cadastrarForm').validate({
            rules: {
                valor: {
                    required:true
                },
                idCliente: {
                    required: function () {
                        return selectedCliente == 0;
                    }
                },
                idCategoria: {
                    required: function () {
                        return selectedCategoria == 0;
                    }
                },
                nome: {
                    required: true,
                    minlength: 2
                }
            },
            messages: {
                nome: {
                    required: "Por favor, coloque algum nome",
                    minlength: "O nome deve conter 2 caractéres no mínimo."
                },
                idCliente: {
                    required: "Selecione algum cliente."
                },
                idCategoria: {
                    required: "Selecione alguma categoria."
                }
            },
            errorElement: "em",
            errorPlacement: function (error, element) {
                error.addClass("help-block text-danger");

                if (element.prop("type") === ("checkbox")) {
                    error.insertAfter(element.parent("label"));
                } else {
                    error.insertAfter(element);
                }
            },
            highlight: function (element, errorClass, validClass) {
                $(".error").addClass("text-danger").removeClass("text-success");
                $(element).addClass("bordered border-danger").removeClass("bordered border-success");
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).addClass("bordered border-success").removeClass("bordered border-danger");
            }
        });
    });
</script>