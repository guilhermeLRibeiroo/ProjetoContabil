
@{
    ViewBag.Title = "Index";
}

<h3 class="text-center">Lista de Clientes</h3>
<div class="row">
    <div class="col-12">
        <a class="btn btn-dark offset-1 mb-1" href="@Url.Action("Cadastrar")"><i class="fas fa-plus"></i> Cadastrar Cliente</a>
    </div>
</div>

<div class="row">
    <div class="col-9 offset-1">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Código</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Contabilidade</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Model.Cliente cliente in ViewBag.Clientes)
                {
                    <tr class="text-center">
                        <td>@cliente.Id</td>
                        <td>@cliente.Nome</td>
                        <td>@cliente.CPF</td>
                        <td>@cliente.Contabilidade.Nome</td>
                        <td>
                            <a href="@Url.Action("Editar", new { id = cliente.Id})" class="btn btn-dark"><i class="fas fa-pen"></i> Editar</a>
                            <a href="@Url.Action("Apagar", new { id = cliente.Id})" class="btn btn-dark"><i class="fas fa-trash"></i> Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="text-center">
                    <th>Código</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Contabilidade</th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>